<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="30" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lockintwin.app.controllers.PermissionController"
      style="-fx-background-color: #0a0a0a;">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    <ImageView fx:id="cameraIcon" fitWidth="100" fitHeight="100" preserveRatio="true"/>
    
    <Label fx:id="titleLabel" text="Camera Permission" styleClass="title-medium"/>
    
    <Label fx:id="descriptionLabel" 
           text="Lock In Twin uses your camera to monitor your attention during study sessions.&#10;&#10;Your privacy is important - all processing happens locally."
           styleClass="label-secondary" 
           style="-fx-font-size: 14px; -fx-text-alignment: center;"
           wrapText="true"
           maxWidth="500"/>
    
    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="allowButton" text="Allow Camera Access" prefWidth="180" prefHeight="45"/>
        <Button fx:id="skipButton" text="Skip for Now" prefWidth="150" prefHeight="45" styleClass="button-secondary"/>
    </HBox>
    
</VBox>
