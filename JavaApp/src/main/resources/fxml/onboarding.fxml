<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="30" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lockintwin.app.controllers.OnboardingController"
      style="-fx-background-color: #0a0a0a;">
    
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    
    <Label fx:id="titleLabel" text="Welcome to Lock In Twin" styleClass="title-large"/>
    
    <Label fx:id="descriptionLabel" 
           text="Track your study sessions with AI-powered attention monitoring.&#10;&#10;Stay focused, take breaks, and improve your productivity."
           styleClass="label-secondary" 
           style="-fx-font-size: 16px; -fx-text-alignment: center;"
           wrapText="true"
           maxWidth="500"/>
    
    <Button fx:id="getStartedButton" text="Get Started" prefWidth="200" prefHeight="50"
            style="-fx-font-size: 16px;"/>
    
</VBox>
